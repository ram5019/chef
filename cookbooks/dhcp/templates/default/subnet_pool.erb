pool {
  <% if @peer -%>
  failover peer "<%= node['domain'] %>";
  <% end -%>
  <% @range = [@range] if @range.is_a?(String) -%>
  <% @range.each do |range| -%>
  range <%= range %>;
  <% end -%>
  <% if @deny -%>
  deny <%= @deny %>;
  <% end -%>
  <% if @allow -%>
  allow <%= @allow %>;
  <% end -%>
}
